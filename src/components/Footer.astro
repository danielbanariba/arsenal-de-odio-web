---
import { DANIEL_BANARIBA, FACEBOOK, INSTAGRAM, BANDCAMP } from '../constants/urls';

const currentYear = new Date().getFullYear();
---

<footer class="w-full bg-black py-16">
	<div class="max-w-7xl mx-auto px-4">
		<!-- Logo de la banda -->
		<div class="grid gap-10 md:grid-cols-[1fr_auto] md:items-center" data-reveal>
			<div class="text-center md:text-left">
				<img
					src="/logo_arsenal.png"
					alt="Arsenal de Odio"
					class="w-48 mx-auto md:mx-0 mb-8"
				/>

			<!-- Social Icons -->
				<div class="flex justify-center md:justify-start gap-5 mb-8" data-reveal-stagger>
					<a
						href={FACEBOOK}
						target="_blank"
						rel="noopener noreferrer"
						class="w-12 h-12 flex items-center justify-center bg-white/10 hover:bg-white/20 rounded-full transition-all"
						aria-label="Facebook"
						data-reveal-item
					>
						<svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
							<path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
						</svg>
					</a>
					<a
						href={INSTAGRAM}
						target="_blank"
						rel="noopener noreferrer"
						class="w-12 h-12 flex items-center justify-center bg-white/10 hover:bg-white/20 rounded-full transition-all"
						aria-label="Instagram"
						data-reveal-item
					>
						<svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
							<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
						</svg>
					</a>
					<a
						href={BANDCAMP}
						target="_blank"
						rel="noopener noreferrer"
						class="w-12 h-12 flex items-center justify-center bg-white/10 hover:bg-white/20 rounded-full transition-all"
						aria-label="Bandcamp"
						data-reveal-item
					>
						<svg class="w-6 h-6 text-white" viewBox="0 0 24 24" fill="currentColor">
							<path d="M0 18.75l7.437-13.5H24l-7.438 13.5H0z"/>
						</svg>
					</a>
				</div>

				<p class="text-white/70 font-cartoon-toy text-sm max-w-2xl mx-auto md:mx-0">
					Thrash Metal desde Tegucigalpa, Honduras
				</p>
			</div>

				<div class="rounded-lg border border-white/10 bg-white/5 px-7 py-6 text-center md:text-right">
					<p class="text-xs text-white/60 font-cartoon-toy uppercase tracking-[0.3em] mb-2">
						Desarrollado por
					</p>
				<a
					href={DANIEL_BANARIBA}
					target="_blank"
					rel="noopener noreferrer"
					class="font-pulse-virgin text-2xl text-white/90 hover:text-secondary transition-colors"
				>
					DANIEL BANARIBA
				</a>
			</div>
		</div>
	</div>

	<!-- Divider - Full width -->
	<div class="h-px bg-white/10 w-full mb-8"></div>

	<div class="max-w-7xl mx-auto px-4">
		<div class="flex flex-col md:flex-row items-center justify-center md:justify-between gap-8 text-center">
			<div>
				<p class="text-white/80 font-cartoon-toy text-sm">
					Â© 2023-{currentYear} ARSENAL DE ODIO
				</p>
				<p class="text-xs text-white/50">
					TODOS LOS DERECHOS RESERVADOS
				</p>
			</div>

			<a
				href="#"
				class="flex items-center gap-2 px-4 py-2 bg-white/5 hover:bg-white/10 rounded-lg transition-all text-white/70 hover:text-white"
			>
				<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
				</svg>
				<span class="font-cartoon-toy text-sm">VOLVER ARRIBA</span>
			</a>
		</div>
	</div>
</footer>
