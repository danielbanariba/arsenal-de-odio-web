---
import { SPOTIFY, YOUTUBE_MUSIC, APPLE_MUSIC, DEEZER } from '../../constants/urls';

const songs = [
	"Cathrashers",
	"Con Derecho a Muerte",
	"Puños de Furia",
	"Asesinos",
	"Arsenal Ataca",
	"Pisemos Pues",
	"Larga Vida al Metal",
	"Arsenal de Odio",
	"Muerte en el Mosh",
	"Siente el Fuego"
];
---

<section id="musica" class="w-full py-20 bg-black">
	<div class="max-w-7xl mx-auto px-4">
		<!-- Title - Centered -->
		<div class="text-center mb-16" data-reveal>
			<h2 class="text-6xl md:text-8xl font-cartoon-toy text-white mb-4">
				MUERTE EN EL MOSH
			</h2>
			<p class="text-white/70 font-cartoon-toy text-lg">
				Álbum completo disponible en todas las plataformas
			</p>
		</div>

		<!-- Main Content Grid - Centered -->
		<div class="grid lg:grid-cols-2 gap-14 items-start mb-16">
				<!-- Album Cover -->
				<div class="flex justify-center" data-reveal>
					<div class="w-full max-w-md">
						<img
							src="/img/portada.jpg"
							alt="Arsenal de Odio - Muerte en el Mosh"
							class="w-full rounded-lg shadow-2xl"
						/>
					</div>
				</div>

				<!-- Tracklist -->
				<div class="bg-black/50 border-2 border-white/10 rounded-lg p-8">
					<div class="flex items-center gap-3 mb-8">
						<svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
							<path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v9.114A4.369 4.369 0 005 14c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V7.82l8-1.6v5.894A4.37 4.37 0 0015 12c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V3z"/>
						</svg>
						<h3 class="text-2xl font-cartoon-toy text-white">TRACKLIST</h3>
					</div>

					<div class="space-y-4" data-reveal-stagger>
						{songs.map((song, index) => (
							<div class="flex items-center gap-5 text-white/90 hover:text-white transition-colors" data-reveal-item>
								<span class="font-cartoon-toy text-lg w-8">
									{String(index + 1).padStart(2, '0')}.
								</span>
								<span class="font-cartoon-toy text-lg flex-1">{song}</span>
							</div>
						))}
					</div>

					<!-- Album Info -->
					<div class="mt-10 pt-8 border-t border-white/10 flex flex-wrap gap-8 text-sm" data-reveal-stagger>
						<div class="flex items-center gap-2 text-white/70" data-reveal-item>
							<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
							</svg>
							<span class="font-cartoon-toy">2023</span>
						</div>
						<div class="flex items-center gap-2 text-white/70" data-reveal-item>
							<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
								<path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v9.114A4.369 4.369 0 005 14c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V7.82l8-1.6v5.894A4.37 4.37 0 0015 12c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V3z"/>
							</svg>
							<span class="font-cartoon-toy">10 TRACKS</span>
						</div>
						<div class="flex items-center gap-2 text-white/70" data-reveal-item>
							<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
							</svg>
							<span class="font-cartoon-toy">THRASH METAL</span>
						</div>
					</div>
				</div>
		</div>

		<!-- Platform Icons - Centered -->
		<div class="text-center">
			<h3 class="text-2xl font-cartoon-toy text-white mb-8" data-reveal>ESCUCHAR EN:</h3>
			<div class="flex justify-center gap-6 flex-wrap" data-reveal-stagger>
				<a
					href={SPOTIFY}
					target="_blank"
					rel="noopener noreferrer"
					class="flex items-center justify-center w-16 h-16 bg-white/10 hover:bg-white/20 rounded-full transition-all"
					data-reveal-item
				>
					<img src="/icons/spotify.svg" alt="Spotify" class="w-8 h-8" />
				</a>
				<a
					href={YOUTUBE_MUSIC}
					target="_blank"
					rel="noopener noreferrer"
					class="flex items-center justify-center w-16 h-16 bg-white/10 hover:bg-white/20 rounded-full transition-all"
					data-reveal-item
				>
					<img src="/icons/youtube.svg" alt="YouTube Music" class="w-8 h-8" />
				</a>
				<a
					href={APPLE_MUSIC}
					target="_blank"
					rel="noopener noreferrer"
					class="flex items-center justify-center w-16 h-16 bg-white/10 hover:bg-white/20 rounded-full transition-all"
					data-reveal-item
				>
					<img src="/icons/music.svg" alt="Apple Music" class="w-8 h-8" />
				</a>
				<a
					href={DEEZER}
					target="_blank"
					rel="noopener noreferrer"
					class="flex items-center justify-center w-16 h-16 bg-white/10 hover:bg-white/20 rounded-full transition-all"
					data-reveal-item
				>
					<img src="/icons/film.svg" alt="Deezer" class="w-8 h-8" />
				</a>
			</div>
		</div>
	</div>
</section>
