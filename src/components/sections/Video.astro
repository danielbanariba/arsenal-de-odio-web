---
// Video section matching original design
---

<section class="relative w-full min-h-screen overflow-hidden flex items-center justify-center bg-black">
	<!-- Background Video -->
	<video
		autoplay
		muted
		loop
		playsinline
		preload="auto"
		class="absolute top-0 left-0 w-full h-full object-cover opacity-60"
	>
		<source src="/video/arsenal_video.mp4" type="video/mp4" />
	</video>

	<!-- Dark Overlay -->
	<div class="absolute inset-0 bg-black/40"></div>

	<!-- Content -->
	<div class="relative z-10 text-center px-4 py-32 max-w-4xl mx-auto">
		<!-- Main Title -->
		<h2 class="text-[15vw] md:text-9xl font-cartoon-toy text-white font-bold mb-6">
			MUY PRONTO
		</h2>

		<p class="text-2xl md:text-4xl font-cartoon-toy text-white/90 mb-12">
			Nuevo Material En Camino
		</p>

		<!-- Simple Feature Grid -->
		<div class="grid md:grid-cols-3 gap-6 mt-16">
			<div class="bg-white/5 backdrop-blur-sm rounded-lg p-6 border border-white/10">
				<svg class="w-12 h-12 text-white mx-auto mb-4" fill="currentColor" viewBox="0 0 20 20">
					<path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v9.114A4.369 4.369 0 005 14c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V7.82l8-1.6v5.894A4.37 4.37 0 0015 12c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V3z"/>
				</svg>
				<h3 class="font-cartoon-toy text-xl text-white mb-2">NUEVAS CANCIONES</h3>
				<p class="font-cartoon-toy text-sm text-white/70">Más thrash metal brutal</p>
			</div>

			<div class="bg-white/5 backdrop-blur-sm rounded-lg p-6 border border-white/10">
				<svg class="w-12 h-12 text-white mx-auto mb-4" fill="currentColor" viewBox="0 0 20 20">
					<path d="M2 6a2 2 0 012-2h6a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zM14.553 7.106A1 1 0 0014 8v4a1 1 0 00.553.894l2 1A1 1 0 0018 13V7a1 1 0 00-1.447-.894l-2 1z"/>
				</svg>
				<h3 class="font-cartoon-toy text-xl text-white mb-2">VIDEOS OFICIALES</h3>
				<p class="font-cartoon-toy text-sm text-white/70">Producción de alta calidad</p>
			</div>

			<div class="bg-white/5 backdrop-blur-sm rounded-lg p-6 border border-white/10">
				<svg class="w-12 h-12 text-white mx-auto mb-4" fill="currentColor" viewBox="0 0 20 20">
					<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"/>
				</svg>
				<h3 class="font-cartoon-toy text-xl text-white mb-2">CONTENIDO EXCLUSIVO</h3>
				<p class="font-cartoon-toy text-sm text-white/70">Detrás de cámaras y más</p>
			</div>
		</div>
	</div>
</section>
